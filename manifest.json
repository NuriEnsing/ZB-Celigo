{
    "manifest_version": 3,
    "name": "Celigo Integrator.io Assistant",
    "description": "Extra features for your celigo integrations.",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_title": "Celigo Integrator.io Assistant",
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ]
}